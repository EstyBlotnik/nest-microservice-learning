// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int        @id @default(autoincrement())
  name        String     @db.VarChar(255)
  create_date DateTime   @db.Timestamptz(6)
  locationId  Int
  location    Location   @relation(fields: [locationId], references: [id])

  alerts      Int[]
  status      Status
  description String?
}

model Location {
  id        Int      @id @default(autoincrement())
  latitude  Float
  longitude Float
  events    Event[]

  @@unique([latitude, longitude])
}

enum Status {
  OPEN       // 1 - פתוח
  ACTIVE     // 2 - פעיל
  TESTING    // 3 - ניסוי
  CHECKING   // 4 - בבדיקה
  CLOSED     // 5 - סגור
  CANCELED   // 6 - מבוטל
}
